%head
  %meta{:charset => "utf-8"}/
  %meta{:content => "", :name => "description"}/
  %meta{:content => "", :name => "copyright"}/
  %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}/
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %meta{:content => "True", :name => "HandheldFriendly"}/
  %meta{:content => "320", :name => "MobileOptimized"}/
  %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
  %meta{:content => "black-translucent", :name => "apple-mobile-web-app-status-bar-style"}/
  %meta{:content => "on", "http-equiv" => "cleartype"}/
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
  - if content_for? :title
    %title= yield_content :title
  - else
    %title= data.page.title || "Dotide官方博客"
  %link{:href => "//netdna.bootstrapcdn.com/font-awesome/3.2.0/css/font-awesome.min.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
  = stylesheet_link_tag "application"
  = yield_content :stylesheets
  - if content_for? :styles
    :css
      #{yield_content :styles}
  = javascript_include_tag "modernizr"
  = yield_content :head
%body
  / Logo &amp; Top Nav
  %nav.top-bar
    %ul.title-area
      %li.name
        %h1
          - link_to '/cn/' do
            = image_tag('logo.png')
            Dotide官方博客
    %section.top-bar-section
      %ul
        %li.divider
        %li= link_to '关于我们', '/cn/2013/08/25/aboutus.html'
      %ul
        %li.divider
        %li= link_to '本站源代码', 'https://github.com/dotide/blog.dotide.com'
      %ul.right
        %li.divider
        %li= link_to '返回Dotide', 'http://dotide.com/'

  / Main page container
  .row
    .small-12.columns
      = yield
  / Footer
  %footer.footer.row
    .small-12.large-6.columns
      %p
        \&copy; Copyright #{Date.today.year.to_s} Dotide官方博客
    .small-12.large-6.columns
      %p.right
        %i.icon-heart
        = link_to '托管于又拍云', 'https://www.upyun.com/?md=geakit'
