  <%= yield_content :stylesheets %>

  <% if content_for? :styles %>
  <style type="text/css">
  <%= yield_content :styles %>
  </style>
  <% end %>

  <%= javascript_include_tag "modernizr" %>

  <%= yield_content :head %>
</head>
<body>

  <!-- Logo & Top Nav -->
  <div class="row">
    <div class="small-4 columns page-title">
      <h1>
        <% link_to '/' do %>
          <%= image_tag('logo.png') %>
          Dotide官方博客
        <% end %>
      </h1>
    </div>
    <div class="small-8 columns">
      <ul class="link-list right">
      </ul>
    </div>
  </div>
  <!-- End Header and Nav -->

  <!-- Main page container -->
  <div class="row">
    <div class="small-12 columns">
      <%= yield %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="row">
    <div class="small-12 large-6 columns">
      <p>&copy; Copyright <%= Date.today.year.to_s %> Dotide官方博客</p>
    </div>
    <div class="small-12 large-6 columns">
      <p class="right"><i class="icon-heart"></i> <%= link_to '托管于又拍云', 'https://www.upyun.com/?md=geakit' %></p>
    </div>
  </footer>

