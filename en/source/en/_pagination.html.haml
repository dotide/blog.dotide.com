- if paginate && num_pages > 1
  .pagination-centered
    %ul.pagination
      - if prev_page
        %li{:class => "arrow#{prev_page.nil? ? ' unavailable' : ''}"}= link_to '&laquo; Newer', prev_page
      - (1..num_pages).each do |i|
        - if i == page_number
          %li.current.unavailable= link_to "#{i}", '#'
        - else
          - p = nil
          - if i < page_number
            = (i...page_number).each do p = p ? p.metadata[:locals]['prev_page'] : prev_page; end
          - else
            = (page_number...i).each do p = p ? p.metadata[:locals]['next_page'] : next_page; end
          %li= link_to "#{i}", p && p.url
      - if next_page
        %li{:class => "arrow#{next_page.nil? ? ' unavailable' : ''}"}= link_to 'Older &raquo;', next_page
