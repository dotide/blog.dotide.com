---
pageable: true
---
<% content_for :head do %>
  <link href="/en/feed.xml" type="application/atom+xml" rel="alternate" />
<% end %>

<div class="articles">
  <% page_articles.each_with_index do |article, i| %>
    <% if i > 0 %>
      <hr />
    <% end %>
    <%= partial '/en/article', :locals => {:article => article, :digest => true} %>
  <% end %>
</div>

<%= partial '/en/pagination', :locals => {
  :paginate => paginate,
  :next_page => next_page,
  :prev_page => prev_page,
  :num_pages => num_pages,
  :page_number => page_number
} %>
